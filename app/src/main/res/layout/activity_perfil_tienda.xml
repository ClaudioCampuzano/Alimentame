<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perfil_tienda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.telematica.android.alimentame.Perfil_tiendaActivity"
    android:background="@drawable/blackground1">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detalle"
        android:textAlignment="center"
        android:layout_below="@+id/distancia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:textSize="24sp"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="83dp">

        <TextView
            android:text="Ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="24sp"
            android:textColor="@color/cast_expanded_controller_background_color" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/longitud1"
            android:layout_marginLeft="30sp"
            android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textColor="@color/cast_expanded_controller_background_color" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/latitud1"
            android:layout_marginLeft="30sp"
            android:background="@android:color/holo_blue_light"
            android:textColor="@color/cast_expanded_controller_background_color" />

    </LinearLayout>

    <TextView
        android:text="Distancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView6"
        android:textSize="24sp"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_below="@+id/nombre_user"
        android:layout_toStartOf="@+id/detalle" />

    <TextView
        android:text="Venta de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5"
        android:textSize="36sp"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_alignParentTop="true"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombre_user"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_below="@+id/textView5" />

    <TextView
        android:text="Precio  $"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/textView4"
        android:textSize="24sp"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distancia"
        android:textSize="24sp"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/precio3"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/distancia"
        android:layout_alignStart="@+id/distancia" />

</RelativeLayout>
