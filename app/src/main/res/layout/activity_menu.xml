<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.telematica.android.alimentame.MenuActivity"
    android:background="@drawable/blackground">

    <ImageView android:id="@+id/imagenLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iconoapp"
                android:maxHeight="200dp"
                android:scaleType="fitCenter"
                tools:ignore="ContentDescription"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/add_geofences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_geofences_button"
        tools:ignore="UnknownId"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Tiendas Cercanas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actualizar"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/imagenLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
                android:text="Crea tu Tienda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        android:id="@+id/agregar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/actualizar" />

</RelativeLayout>



