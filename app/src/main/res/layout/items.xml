<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="13dp"
        app:srcCompat="@drawable/verde"
        android:id="@+id/ESTADOFOTO"
        android:layout_weight="0.29"
        android:background="@color/wallet_bright_foreground_holo_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prod_nombre"
        android:background="@color/wallet_bright_foreground_holo_light"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/ESTADOFOTO"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prod_descripcion"
        android:background="@color/wallet_bright_foreground_holo_light"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/prod_nombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prod_precio"
        android:background="@color/wallet_bright_foreground_holo_light"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_below="@+id/prod_descripcion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/modificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/Modificar"
        android:layout_above="@+id/prod_descripcion" />

    <Button
        android:text="@string/eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prod_nombre"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/Eliminar"
        android:layout_alignBottom="@+id/prod_precio" />

</RelativeLayout>